{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDirs": [
      "src",
      "tests"
    ],
    "target": "es6",
    "sourceMap": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules"
  ]
}
